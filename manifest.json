{
    "manifest_version": 3,
    "name": "Legend Life Enhancer",
    "version": "0.2",
    "description": "Enhances the Legend of the Mara game",
    "permissions": [
      "scripting",
  	  "webRequest",
      "webNavigation",
      "tabs",
      "activeTab"
    ],
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	  },
    "host_permissions": [
      "https://www.otherside-wiki.xyz/*",
      "https://lotm.otherside.xyz/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://lotm.otherside.xyz/camp/otherdeed/*", "https://www.otherside-wiki.xyz/*"],
        "js": ["camp.js"],
        "run_at": "document_idle"
      }      
    ]
  }
  